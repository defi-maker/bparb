# Environment configuration template
# Copy this file to .env and fill in your actual values

# Backpack Exchange API credentials
BACKPACK_API_KEY=your_base64_api_key_here
BACKPACK_PRIVATE_KEY=your_base64_private_key_here

# Trading fees (for reference and calculation)
# Current fee levels: Spot maker 0.07%, taker 0.09%, Futures maker 0.02%, taker 0.05%
# Using maker orders: Round-trip cost ~0.18% (entry 0.09% + exit 0.09%)
# Using taker orders: Round-trip cost ~0.28% (entry 0.14% + exit 0.14%)

# Risk management parameters for $1000 account
MAX_POSITION_SIZE=200          # Maximum USD per position (20% of balance)
MAX_TOTAL_EXPOSURE=400         # Maximum total USD exposure (40% of balance)
MAX_DAILY_LOSS=30              # Maximum daily loss in USD (3% of balance)
MIN_ACCOUNT_BALANCE=700        # Minimum account balance to maintain (70% of balance)

# Strategy parameters (dynamic order type selection)
MIN_SPREAD_THRESHOLD=0.15      # Minimum spread to detect opportunities
MIN_EXECUTION_THRESHOLD=0.20   # Minimum expected return to execute (conservative for taker fees)
LARGE_SPREAD_THRESHOLD=0.40    # Above this spread, use maker orders for better fees
MAX_SPREAD_THRESHOLD=2.0       # Maximum spread to avoid illiquid markets
MIN_FUNDING_RATE=0.02          # Minimum funding rate for funding arbitrage
POSITION_SIZE_USD=150          # Default position size in USD (15% of balance, conservative)

# Order execution parameters
USE_MAKER_FOR_LARGE_SPREADS=true    # Use maker orders only for large spreads
ORDER_TIMEOUT_SECONDS=15            # Shorter timeout for faster execution
FALLBACK_TO_TAKER=true              # Always fallback to market orders

# Confidence scoring parameters
CONFIDENCE_THRESHOLD=0.6       # Lower threshold given higher spread requirements

# Logging
LOG_LEVEL=INFO